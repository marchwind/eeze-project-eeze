<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/bluetooth_line_color">
    
    <FrameLayout 
        android:id="@+id/bluetooth_row_container"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/btooth_row_height"
        android:background="@color/common_white_color"
        android:layout_marginBottom="1px"
        >
        
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/btooth_row_side_margin"
            android:layout_gravity="center_vertical">
            
            <TextView android:id="@+id/bluetooth_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/btooth_name_text_size"
                android:text="Bluetooth Print1"
                android:textColor="@color/setcommon_color"/>
            
            <TextView 
                android:id="@+id/connection_yn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"                
                android:textSize="@dimen/btooth_yn_text_size"
                android:textColor="@color/bluetooth_connection_color"
                android:text="연결 안됨"/>
        </LinearLayout>
        
        <Button 
            android:id="@+id/btooth_connection_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bluetooth_connection_btn"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="@dimen/btooth_row_side_margin"
            android:text="연결"
            android:textStyle="bold"
            android:textSize="@dimen/btooth_btn_text_size"
            />
        
    </FrameLayout>
    
</RelativeLayout>
